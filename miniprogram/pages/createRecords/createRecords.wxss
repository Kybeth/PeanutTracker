/**index.wxss**/

view {
  margin: 10rpx;
}


.noExistPrompt {
  margin: 30rpx 20rpx 20rpx 20rpx;
  text-align: center; 
  padding: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.noExistPrompt text{
  margin: 0rpx;
  color: #4D4D4D;
  font-size: 15px;
  padding: 0;

}

.btns{
  display: flex;
  flex-direction: row;
  align-items: center;
}

.inputArea-wrap {
  margin: 10rpx 20rpx 20rpx 20rpx;
  text-align: center; 
  padding: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.inputArea {
  border: #AAAAAA solid 1px;
  height: 4.3em;
  width: 500rpx;
  padding: 10px;
  border-radius: 5px;

  font-size: 15px
}

.inputArea2 {
  border: #AAAAAA solid 1px;
  width: 500rpx;
  padding: 10px;
  border-radius: 5px;
}

.time-section {
  padding: 10rpx;
  font-size: 15px;
  font-weight: bold;
}

.btn-area{
  text-align: center; 
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
  overflow: hidden
}

.userinfo-nickname {
  color: rgb(128, 128, 128);
}

.search-section {
  margin: 40rpx 0rpx;
}


.searchBar {
  padding: 0rpx;
}


.searchBtn {
  padding: 15rpx 30rpx;
  background: rgb(10, 183, 88);
  color: #fff;
  border-radius: 10rpx;
}

.toBeSubmitted {
  margin: 10rpx;
}

.item-inner{
  margin: 0rpx;
  padding: 0rpx;
}

.items-hd {
  margin: 30rpx 0rpx 0rpx 0rpx;
  text-align: center; 
  padding: 0px;
  display: flex;
  flex-direction: column;
  align-items: center;
  
}

.items-hd text{
  color: #4D4D4D;
  font-size: 15px;
  padding: 0;
}

.items-wrap {
  margin: 20rpx;
  padding: 10rpx 10rpx;
  border-left: solid 5px #47c981;
  border-radius: 5px;
}







